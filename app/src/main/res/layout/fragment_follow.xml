<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <include layout="@layout/top_text_title_bar"/>
    <include layout="@layout/line_h_mine"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:text="关注"
            android:id="@+id/foll_focus"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/foll_fans"
            android:text="粉丝"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <com.jude.easyrecyclerview.EasyRecyclerView
            android:id="@+id/foll_fans_recycleview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_progress="@layout/view_progress"
            app:recyclerPadding="8dp"
            app:recyclerPaddingTop="8dp"
            app:recyclerPaddingBottom="8dp"
            app:recyclerPaddingLeft="8dp"
            android:visibility="gone"
            app:recyclerPaddingRight="8dp"
            app:scrollbarStyle="insideOverlay"
            app:scrollbars="none" />
        <com.jude.easyrecyclerview.EasyRecyclerView
            android:id="@+id/foll_focus_recycleview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_progress="@layout/view_progress"
            app:recyclerPadding="8dp"
            app:recyclerPaddingTop="8dp"
            app:recyclerPaddingBottom="8dp"
            app:recyclerPaddingLeft="8dp"
            app:recyclerPaddingRight="8dp"
            app:scrollbarStyle="insideOverlay"
            app:scrollbars="none" />
    </LinearLayout>

</LinearLayout>