<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <include layout="@layout/top_text_title_bar"/>
    <include layout="@layout/line_h_mine"/>
    <LinearLayout
        android:id="@+id/content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <com.jude.easyrecyclerview.EasyRecyclerView
            android:id="@+id/photowall_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_progress="@layout/view_progress"
            app:recyclerPadding="8dp"
            app:recyclerPaddingTop="8dp"
            app:recyclerPaddingBottom="8dp"
            app:recyclerPaddingLeft="8dp"
            app:scrollbarStyle="insideOverlay"
            app:scrollbars="none" />
        app:recyclerPaddingRight="8dp"
        />
    </LinearLayout>

</LinearLayout>