<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/line_h_mine_space"/>
    <com.king.liaoba.mvp.view.MarqueeTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/live_marquee"
        >
    </com.king.liaoba.mvp.view.MarqueeTextView>
    <TextView
        android:layout_width="match_parent"
        android:text="热门推荐"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>
    <com.jude.easyrecyclerview.EasyRecyclerView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/easyRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_empty="@layout/layout_empty"
        app:layout_error="@layout/layout_error"
        app:layout_progress="@layout/progress_bar"/>
</LinearLayout>